.content 
  font-size 15px !important

.site-name
  display: none !important

.logo 
  height: 1.8rem !important
  vertical-align: middle !important

.content a > code 
  background-color rgba(86, 155, 45, 0.13)

.sidebar a.sidebar-link
  font-size 15px !important
  font-weight normal !important

.sidebar a.sidebar-link.active
  font-weight bold !important

.sidebar > .sidebar-links > li:not(:first-child) 
  margin-top 0.25rem !important

.callout:hover
  background #1d0b00
  text-decoration none !important

.callout
  transition background 0.2s
  background #0F1112
  display block
  padding 1rem 1.5rem
  border-radius 0.6rem
  color white
  font-weight normal
  .title
    font-size 1.3rem
    font-weight bold
    margin-bottom 0
  p
    margin 0.2rem 0
  code, a
    color #F78A50
  
.light:hover
  background #e9f3f5

.light
  background #f0f4f8  
  color black
  a
    color $accentColor

.grid
  display grid
  grid-auto-flow column
  gap 1rem
  margin 1rem 0
  
video, iframe[title="YouTube video player"]
  border-radius 0.6rem

.content__default , .page-edit, .page-nav
  margin 20px 0 !important

.code-copy
  position absolute
  right 30px
  top 16px

